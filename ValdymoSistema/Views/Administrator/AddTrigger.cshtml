@model AddTriggerViewModel
@{
    ViewData["Title"] = "Pridėti jungiklį";
}

    <div class="text-center">
        <div>
            <button><a class="nav-link text-dark" asp-area="" asp-controller="Administrator" asp-action="AddRoom">Pridėti patalpą</a></button>
            <button><a class="nav-link text-dark" asp-area="" asp-controller="Administrator" asp-action="AddTrigger">Pridėti jungiklį</a></button>
            <button><a class="nav-link text-dark" asp-area="" asp-controller="Administrator" asp-action="AddLight">Pridėti lempą</a></button>
        </div>
        <br />
        <div class="form-wrapper">
            <h1>@ViewBag.Title</h1>
            <div class="text-center">
                <span class="text-success">@ViewBag.Message</span>
            </div>
            @if (Model.Rooms.Count > 0)
            {
                <form method="post" asp-action="AddTrigger" asp-controller="Administrator">
                    <div>
                        <label asp-for="RoomId"></label>
                        <select asp-for="RoomId">
                            @foreach (var room in Model.Rooms)
                            {
                                <option value="@room.RoomId">@room.FloorNumber aukštas / patalpa @room.RoomName</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label asp-for="ControllerName"></label>
                        <input asp-for="ControllerName" />
                        <span asp-validation-for="ControllerName" class="text-danger"></span><br />
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Pridėti" />
                    </div>
                </form>
            }
            else
            {
                <h2>Nėra registruotų patalpų duomenų bazėje, norint pridėti jungiklį, reikia registruotos patalpos</h2>
            }
        </div>
    </div>
