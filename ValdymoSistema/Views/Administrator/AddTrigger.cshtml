@model AddTriggerViewModel
@{
    ViewData["Title"] = "Pridėti jungiklį";
}

    <div class="text-center">
        <div class="form-wrapper">
            <h1>@ViewBag.Title</h1>
            <div class="text-center">
                <span class="text-success">@ViewBag.Message</span>
            </div>
            <form method="post" asp-action="AddTrigger" asp-controller="Administrator">
                <div>
                    <label asp-for="RoomId"></label>
                    <select asp-for="RoomId">
                        @foreach (var room in Model.Rooms)
                        {
                            <option value="@room.RoomId">@room.FloorNumber / @room.RoomName</option>
                        }
                    </select>
                </div>
                <div>
                    <label asp-for="ControllerName"></label>
                    <input asp-for="ControllerName" />
                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Pridėti" />
                </div>
            </form>
        </div>
    </div>
