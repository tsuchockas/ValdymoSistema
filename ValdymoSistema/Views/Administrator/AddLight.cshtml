@model AddLightViewModel
@{
    ViewData["Title"] = "Pridėti šviestuvą";
}



    <div class="text-center">
        <div class="form-wrapper">
            <h1>@ViewBag.Title</h1>
            <div class="text-center">
                <span class="text-success">@ViewBag.Message</span>
            </div>
            <form method="post" asp-action="AddLight" asp-controller="Administrator">
                <div>
                    <label asp-for="TriggerId"></label>
                    <select name="TriggerId">
                        @foreach (var room in Model.Rooms)
                        {
                            foreach (var trigger in room.Triggers)
                            {
                                <option value="@trigger.TriggerId">@room.RoomName / @trigger.TriggerName</option>
                            }
                        }
                    </select>
                </div>
                <div>
                    <label asp-for="ControllerPin"></label>
                    <input asp-for="ControllerPin" />
                    <span asp-validation-for="ControllerPin" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Pridėti" />
                </div>
            </form>
        </div>
    </div>